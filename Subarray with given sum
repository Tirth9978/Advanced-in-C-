// This will give only first sub array!!

#include<iostream>
using namespace std;

int main(){
    int n;
    cout << "Enter the size of an array:";
    cin >> n;
    int arr[n];
    int arr_1[5],i,sum,subarray_sum = 0,k,count=0;
    cout << endl ;
    for (i=0;i<n;i++){
        cout << "Enter the number:";
        cin >> arr[i];
    }
    cout << endl << endl;
    cout << "Array" << endl;
    for (i=0;i<5;i++){
        cout << arr[i] << "  ";
    }
    cout << endl;
    cout << "Enter the sum:";
    cin >> sum;
    for (i=0;i<5;i++){
        subarray_sum = 0;
        count = 0;
        for (int j=i,k=0;j<5,k<5;j++,k++){
            if(subarray_sum < sum){
                subarray_sum = subarray_sum +arr[j];  
                arr_1[k] = arr[j];
                count++;
            } 
            else if (subarray_sum == sum || subarray_sum > sum){
                break;
            }
        }
        if (subarray_sum == sum){
            break;
        }
    }
    
    if (subarray_sum != sum){
        cout << "There is no sub array";
    }
    else {
        cout << "Sub array:" << endl;
        for (i=0;i<count;i++){
            cout << arr_1[i] << "  ";
        }
    }
    return 0;
}

