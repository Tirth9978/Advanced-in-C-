(10) Sort an array:-
  --> Code : -
    #include<iostream>
    using namespace std;
    
    void sort(int *arr,int n,int i){
        if (i == n*n){
            return ;
        }
        if (arr[i] > arr[i+1] && i<n-1){
            int temp = arr[i];
            arr[i] = arr[i+1];
            arr[i+1] = temp;
            sort (arr,n,i+1);
        }
        else if (i>=n-1){
            sort(arr,n,0);
        }
    }
    
    int main(){
        int n;
        cout << "Entre the size of an array:";
        cin >> n;
        int arr[n];
        for (int i=0;i<n;i++){
            cout << "Enter the number:";
            cin >> arr[i];
        }
        sort (arr,n,0);
        for (int i=0;i<n;i++){
            cout << arr[i]<< "  ";
        }
        return 0;
    }


