(12) Nth catalan number:-
  --> Code :
    #include<iostream>
    using namespace std;
    
    int catalan(int n){
        if (n == 0 || n == 1){
            return 1;
        }
        int sum = 0;
        for (int i=0;i<n;i++){
            sum += catalan(i) *catalan(n-1-i);
        }
        return sum ;
    }
    
    int main(void){
        int n;
        cout << "Entre the number:";
        cin >> n;
        cout << "Nth catalan number : " << catalan(n);
        return 0;
    }
