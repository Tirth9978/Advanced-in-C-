(1)Reverse a string:--
  --> code : 
    #include<iostream>
    #include<string>
    using namespace std;
    
    void rev(string str,string str_ref,int i,int j){
        if (i == str.size()){
            return ;
        }
        str_ref[i] = str[j];
        cout << str_ref[i];
        rev(str,str_ref,i+1,j-1);
    }
    
    int main(){
        string str;
        string str_ref;
        cout << "Enter the string:";
        getline (cin , str);
        for (int i=0;i<str_ref.size();i++){
            str_ref[i] = '0';
        }
        rev(str,str_ref,0,str.size()-1);
        return 0;
    }


