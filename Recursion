(6)print all n numbers :
  --> i: Decreasing order:

      - Code :
        #include<iostream>
        using namespace std;
        
        void numbers(int n){
            if (n>0){
                cout << n<< "  ";
                numbers(n-1);
            }
            if (n == 0){
                return ;
            }
        }
        
        int main(){
            int n;
            cout << "Entre the number:";
            cin >> n;
            // cout << "";
            numbers(n);
            return 0;
        }

  --> ii : Increasing order: -
    - Code :
      #include<iostream>
      using namespace std;
      
      void numbers(int num,int n){
          if (num <= n){
              cout << num << "  ";
              numbers (num + 1,n);
          }
          if (num > n){
              return ;
          }
      }
      
      int main(){
          int n;
          int num = 1;
          cout << "Entre the number:";
          cin >> n;
          // cout << "";
          numbers(num,n);
          return 0;
      }

