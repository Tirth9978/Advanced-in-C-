(7) decimal To binary:-
  --> Code : 
    #include<iostream>
    using namespace std;
    
    void binary(int num){
        if (num == 0){
            return ;
        }
        int rem = num % 2;
        cout << rem;
        binary(num / 2);
    }
    
    int main(){
        int num;
        cout << "Entre the number:";
        cin >> num;
        binary(num);
        return 0;
    }


************************************************************************************************************************************************************************

(8) Find the size of a string:-
  --> Code :
    #include<iostream>
    #include<string>
    using namespace std;
    
    int length(string str,int n){
        if (n == -1){
            return 1;
        }
        return 1+length(str,n-1);
    }
    
    int main(){
        string str;
        cout << "Entre the string: ";
        getline (cin , str);
        cout << "Size : "<< length(str,str.size()-1)-1;
        return 0;
    }


************************************************************************************************************************************************************************


(8) Find maximum number in array:-
  --> Code : 
    #include<iostream>
    using namespace std;
    
    int max_1(int arr[],int n,int max,int i){
        if (i == n){
            return max;
        }
        if (arr[i] > max){
            max = arr[i];
        }
        max_1(arr,n,max,i+1);
    }
    
    int main(){
        int n;
        cout << "Entre the size of an array:";
        cin >> n;
        int arr[n];
        for (int i=0;i<n;i++){
            cout << "Entre the number:";
            cin >> arr[i];
        }
        cout << "Maximum number : "<< max_1(arr,n,0,0);
        return 0;
    }
