--> Topic : Array
--> Method 1:
            --> Code : 
                  #include<iostream>
                  using namespace std;
                  
                  int main(){
                      int n;
                      cout << "Entre the size of an array:";
                      cin >> n;
                      int arr[n];
                      for (int i=0;i<n;i++){
                          // cout << "Entre the size of an array:";
                          cout << "Entre the number:";
                          cin >> arr[i];
                      }
                      int sum = 0;
                      int max_sum = 0;
                      for (int i=0;i<n;i++){
                          for (int j=i;j<n;j++){
                              sum = 0;
                              int k = i;
                              while (k<=j){
                                  sum = sum + arr[k];
                                  k++;
                              }
                              if (j==0){
                                  max_sum = sum;
                              }
                              if (max_sum < sum){
                                  max_sum = sum;
                              }
                          }
                      }
                      cout << max_sum;
                      return 0;
                  }
