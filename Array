(10)print all subarray of a given array:-
  --> Topic : Array
  --> Code :
    #include<iostream>
    using namespace std;
    
    int main(){
        int n;
        cout << "Enter the size of an array:";
        cin >> n;
        int arr[n];
        for (int i=0;i<n;i++){
            cout << "Enter the number:";
            cin >> arr[i];
            
        }
        for (int i=0;i<n;i++){
            for (int j=i;j<n;j++){
                int k = i;
                while (k<=j){
                    cout << arr[k] << "  " ;
                    k++;
                }
                cout << endl;
            }
            cout << endl;
        }
        return 0;
    }
