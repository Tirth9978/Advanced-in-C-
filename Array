(7)Smallest element missing in the array
  --> Code : 
  
          #include<iostream>
          using namespace std;
          
          int main(){
              int n;
              cout << "Enter the size of an array:";
              cin >>n;
              int arr[n];
              for (int i=0;i<n;i++){
                  cout << "Enter the number:";
                  cin >> arr[i];
              }
              int N = 1e5;
              int arr_1[N];
              for (int i=0;i<N;i++){
                  arr_1[i] =  false ;
              }
              for (int i=0;i<n;i++){
                  if (arr[i] >= 0){
                      arr_1[arr[i]] = true;
                  }
              }
              int ref;
              for (int i=0;i<N;i++){
                  if (arr_1[i] == false){
                      ref = i;
                      break;
                  }
              }
              cout << ref;
              return 0;
          }

