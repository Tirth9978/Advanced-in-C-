(4)Maximum subaray sum:-
--> Method 1:
            --> Code : 
                  #include<iostream>
                  using namespace std;
                  
                  int main(){
                      int n;
                      cout << "Entre the size of an array:";
                      cin >> n;
                      int arr[n];
                      for (int i=0;i<n;i++){
                          // cout << "Entre the size of an array:";
                          cout << "Entre the number:";
                          cin >> arr[i];
                      }
                      int sum = 0;
                      int max_sum = 0;
                      for (int i=0;i<n;i++){
                          for (int j=i;j<n;j++){
                              sum = 0;
                              int k = i;
                              while (k<=j){
                                  sum = sum + arr[k];
                                  k++;
                              }
                              if (j==0){
                                  max_sum = sum;
                              }
                              if (max_sum < sum){
                                  max_sum = sum;
                              }
                          }
                      }
                      cout << max_sum;
                      return 0;
                  }
--> Method 2(Cumulative sum approach): (-->>> Panding)
            --> Code : 
                        #include<iostream>
                        #include <climits>           <-- New 
                        
                        using namespace std;
                        
                        int main(){
                            int n;
                            cout << "Entre the siz eof an array:";
                            cin >>n;
                            int arr[n];
                            for (int i=0;i<n;i++){
                                cout << "Entre the number:";
                                cin >> arr[i];
                            }
                            int arr_1[n];
                            arr_1[0] = 0;
                            for (int i=0;i<n;i++){
                                arr_1[i] = arr_1[i-1] + arr[i-1];
                            }
                            int max_sum = INT_MIN;
                            for (int i=1;i<=n;i++){
                                int sum = 0;
                                for (int j=0;j<i;j++){
                                    sum = arr_1[i]  -  arr_1[j];
                                    // max_sum = max(sum,max_sum);   < -- solve
                                    if (max_sum < sum){
                                        max_sum  =  sum;
                                    }
                                }
                            }
                            cout << max_sum;
                            return 0;
                        }
--> Method 3:
            --> Code:
                        #include<iostream>
                        using namespace std;
                        
                        int main(){
                            int n;
                            cout << "Entre the size of an array:";
                            cin >> n;
                            int arr[n];
                            for (int i=0;i<n;i++){
                                cout << "Entre the number:";
                                cin >> arr[i];
                            }
                            int count = 0;
                            for(int i=0;i<n;i++){
                                if (arr[i] < 0){
                                    count ++;
                                }
                            }
                            int max_sum = 0;
                            if (count == 0){
                                for (int i=0;i<n;i++){
                                    if (arr[i] >= 0){
                                        max_sum = max_sum + arr[i];
                                    }
                                }
                                cout << max_sum;
                            }
                            else {
                                max_sum = arr[0];
                                for (int i=0;i<n;i++){
                                    if ( max_sum < arr[i] ){
                                        max_sum = arr[i];
                                    }
                                }
                                cout << max_sum;
                            }
                            return 0;
                        }


