(6)Pattern 6 : 
  -->Ex : 
    #include<iostream>
    using namespace std;
    
    int main(){
        int n;
        int count = 1;
        cout << "Enter the numbere : ";
        cin >> n;
        for (int i=1;i<=n;i++){
            for (int j=1;j<=i;j++){
                cout << count <<  "    ";
                count ++;
            }cout << endl;
        }
        return 0;
    }

-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------

(7) Pattern 7
  --> Ex :
    1   
    2   3   
    3   4   5   
    4   5   6   7   
    5   6   7   8   9  
  --> Code : 
    #include<iostream>
    using namespace std;
    
    int main(){
        int n;
        int count = 0;
        cout << "Enter the numbere : ";
        cin >> n;
        for (int i=1;i<=n;i++){
            count = i ;
            for (int j=1;j<=i;j++){
                cout << count << "   ";
                count ++;
            }cout << endl;
        }
        return 0;
    }

-----------------------------------------------------------------------------------------------------------------------------------------------------------------------------

(8) Pattern 8 :- 
  -->Ex 
    1   
    2   1   
    3   2   1   
    4   3   2   1   
    5   4   3   2   1  
  -->Code : 
    #include<iostream>
    using namespace std;
    
    int main(){
        int n;
        int count = 0;
        cout << "Enter the numbere : ";
        cin >> n;
        for (int i=1;i<=n;i++){
            count = i ;
            for (int j=1;j<=i;j++){
                cout << count << "   ";
                count --;
            }cout << endl;
        }
        return 0;
    }
