(1) Transpose of a metrix
  --> Code :
      #include<iostream>
      using namespace std;
      
      int main(){
          int n;
          int m;
          cout << "n = ";
          cin >> n;
          cout << "m = ";
          cin >> m;
          int arr[n][m];
          for (int i=0;i<n;i++){
              for (int j=0;j<m;j++){
                  cout << "Entre the number:";
                  cin >> arr[i][j];
              }
          }
          for (int i=0;i<n;i++){
              for (int j= 0;j<m;j++){
                  cout << arr[i][j] << "  ";
              }
              cout << endl;
          }
          if ( m = n ){
              for (int i=0;i<n;i++){
                  for (int j=i;j<m;j++){                        <----(Hear int j = i is main step)
                      
                      int a= 0;
                      a = arr[i][j];
                      arr[i][j] = arr[j][i];
                      arr[j][i] = a;
                      
                  }
              }
              // cout 
              cout << "Transpose of a metrix: " << endl;
              for (int i=0;i<n;i++){
                  for (int j= 0;j<m;j++){
                      cout << arr[i][j] << "  ";
                  }
                  cout << endl;
              }
          }
          else {
              cout << "M and n should be same ";    
          }
          return 0;
      }
  --> Output :   
      1  2            1  3
              ===>  
      2  4            3  4 
