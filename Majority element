--> To find Majority element in an array
--> Code :



      #include<iostream>
      using namespace std;
      
      int main(){
          int n;
          cout << "Enter the size of an array:";
          cin >> n;
          int arr[n];
          for (int i=0;i<n;i++){
              cout << "Enter the number:";
              cin >> arr[i];
          }
          int count = 1;
          int ref = arr[0];
          for (int i=1;i<n;i++){
              if ( count == 0 ){
                  ref = arr[i];
              }
              if (ref == arr[i]){
                  count ++;
              }
              else {
                  count --;
              }
          }
          cout << "Majority Element is " << ref ;
          return 0;
      }
